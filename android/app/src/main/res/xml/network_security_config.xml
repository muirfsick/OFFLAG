<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disallow user-added CAs to reduce MITM risk in production. -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
